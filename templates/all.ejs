<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>All Coments</title>
</head>

<body class="container py-3">
    <div class="d-flex flex-row justify-content-between align-items-center">
        <h1>Coments</h1>
        <a class="btn btn-primary" href="/add">Add Coment</a>
    </div>
    <%for(let i=0; i < coments.length; i++){%>
        <div id="<%=coments[i]._id%>" class="card mt-3 d-flex flex-row align-items-center p-3">
            <div class="card-body">
                <h3 class="card-title">
                    <%=coments[i].name%>
                </h3>
                <p class="card-text">
                    <%=coments[i].coment%>
                </p>
            </div>
            <div>
                <a class="btn btn-info" href="/edit/<%=coments[i]._id%>">Editar</a>
                <button class="btn btn-danger" onclick="deleteComent('<%=coments[i]._id%>')">Delete</button>
            </div>
        </div>
        <%}%>

        <script>
            function deleteComent(id) {
                fetch('/' + id, { method: 'DELETE' }).then((res) => {
                    res.text().then((comentId) => {
                        document.getElementById(comentId).remove();
                    })
                }).catch((error) => {
                    console.log(error);
                })
            }
        </script>
</body>

</html>